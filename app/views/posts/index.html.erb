<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-8">
      <h1 style="display:inline-block;">Feed</h1>
      <h3 style="float:right; display:inline-block;">
        <%= link_to "New post", new_post_path %>
      </h3>
      <div id="posts">
        <% @posts.each do |post| %>
          <% @user = User.all.find_by(id: post.user_id) %>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= link_to @user.username, @user %></h5>
              <p class="card-text"><%= truncate(post.description, :length => 120) %></p>
              <p><%= link_to "Show this post", post %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
</div>

<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<%= link_to "My Profile", current_user %>

<div id="users">
  <%= paginate @users %>
  <table class="table">
    <tr>
      <th>Username</th>
      <th>City</th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.city %></td>
        <td><%= link_to "Show", user %></td>
      </tr>
    <% end %>
  </table>
</div>